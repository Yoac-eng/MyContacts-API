# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
# Serve pra remover os espaços em branco do código
trim_trailing_whitespace = true
# Adiciona uma linha nova no final do código
insert_final_newline = true
